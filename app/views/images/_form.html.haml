.well
  = form_for @image do |f|
    - if @image.errors.any?
      #error_explanation
        %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
        %ul
          - @image.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :description
      = f.text_field :description
    .field
      = f.label :image_url
      = f.text_field :image_url    
    .actions
      = f.submit 'Save'
    